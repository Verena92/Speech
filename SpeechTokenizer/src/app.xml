<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <!-- /*
* SPEECH TOKENIZER
* HANGOUTS PLUGIN
 */ -->
  <ModulePrefs title="Starter App">
    <Require feature="rpc"/>
  </ModulePrefs>
  <Content type="html"><![CDATA[
<!DOCTYPE html>
<!-- Hangout API JavaScript -->
<script src="//hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0"></script>

<!-- Javascript Application -->
<script src="//speech-tokenizer-1282.appspot.com/static/app.js"></script>

<h1><img src="//speech-tokenizer-1282.appspot.com/static/hangouts-logo.png" 
    alt="Google+ Hangouts Logo" height="50" width="50">Speech Tokenizer</h1>
<div style="float: left; padding: 0px 20px; border-right: 1px solid #EEE">
  <dl>
	<dt>Mic aktiv:</dt>
	<dt id="micstatus"></dt>
	<dt>Hangouts-ID:</dt>
	<dt id="hangoutsid"></dt>
  </dl>

  <input type=button value="Click Me!" id="countButton"
      onClick="countButtonClick()"/>
  <input type=button value="Reset" id="resetButton"
      onClick="resetButtonClick()"/>
</div>
<div style="float: left; padding: 0px 20px">
  <p>Fetch some JSON from main.py</p>
  <dl>
    <dt>Message:</dt>
    <dd id="message"></dd>
  </dl>
  <input type=button value="Get Message" id="getMessageButton"
      onClick="getMessageClick()"/>
</div>
<div style="clear: both;"></div>

]]></Content>
</Module>
